<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form action="/admin/<% if(editing) {%>edit-product <% } else { %>add-product<% } %>" method="POST"
            class="product-form">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name='title' id='title'
                    value='<% if(editing) {%><%= product.title %><% } else {%><% }%>'>
            </div>
            <div class="form-control">
                <label for="imageUrl">Image url</label>
                <input type="text" name='imageUrl' id='imageUrl'
                    value='<% if(editing) {%><%= product.imageUrl %><% } else {%><% }%>'>
            </div>
            <% if(!editing) {%>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name='price' step="0.01" id='price'
                    value='<% if(editing) {%><%= product.price %><% } else {%><% }%>'>
            </div>
            <% }%>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description"
                    rows="5"><% if(editing) {%><%= product.description %><% } else {%><% }%></textarea>
            </div>
            <% if(editing) {%>
            <input type="hidden" name="productId" value='<%= product.id%>'>
            <% }%>
            <button class="btn" type='submit'><% if (editing === 'true') {%> Update product <% } else {%>Add
                product<% } %></button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>